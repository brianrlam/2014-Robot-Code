package edu.wpi.first.wpilibj.templates;

//import edu.wpi.first.wpilibj.SimpleRobot;
import edu.wpi.first.wpilibj.camera.AxisCameraException;
import edu.wpi.first.wpilibj.image.NIVisionException;
import edu.wpi.first.wpilibj.Timer;
import edu.wpi.first.wpilibj.RobotDrive;

public class Autonomous {
   

Shooter shooter;
Camera camera;
RobotDrive driveTrain;

public Autonomous(Shooter shtr, Camera cam){
    shooter=shtr;
    camera=cam;
  
}
public void auton() throws NIVisionException, AxisCameraException {
    try {
       
        driveTrain.tankDrive(2.0, 2.0);
        
        if (camera.hotGoalsPresent()) {
            shooter.shoot();
        }
       
        
        else if (!camera.hotGoalsPresent()){
            Timer.delay(4.0);
            shooter.shoot();
        }            
    } catch (NIVisionException ex) {
        ex.printStackTrace();
    }
    catch (AxisCameraException ex) {
        ex.printStackTrace();
    }
   }   
}

/*First hot goal lights up 1 sec after auton starts. Switches 6 sec after first goal lights. */
